<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Logo"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <footerText
                jcr:primaryType="cq:Panel"
                border="false"
                height=""
                title="Footer Text"
                width="">
                <items jcr:primaryType="cq:WidgetCollection">
                    <footerText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Footer Text"
                        name="./footerText"
                        xtype="textfield"/>
                </items>
            </footerText>
            <footerLinkText
                jcr:primaryType="cq:Widget"
                title="Titles"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <footerLinkText
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Click the '+' to add a new text."
                        fieldLabel="Footer Link Texts"
                        name="./footerLinkText"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="textfield"/>
                    </footerLinkText>
                </items>
            </footerLinkText>
            <footerLinks
                jcr:primaryType="cq:Widget"
                title="Links"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <footerLinks
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Click the '+' to add a new link."
                        fieldLabel="Footer Links"
                        name="./footerLinks"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="pathfield"/>
                    </footerLinks>
                </items>
            </footerLinks>
            <hideFooter
                jcr:primaryType="cq:Widget"
                title="Setting"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideFooter
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Check the box if footer will be hidden"
                        fieldLabel="Hide Footer?"
                        inputValue="false"
                        name="./hideFooter"
                        type="checkbox"
                        xtype="selection"/>
                    <footerColor
                        jcr:primaryType="cq:Widget"
                        allowEmpty="false"
                        fieldDescription="Select a proper color"
                        fieldLabel="Color"
                        name="./footerColor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <black
                                jcr:primaryType="nt:unstructured"
                                text="Black"
                                value="black"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="white"/>
                        </options>
                    </footerColor>
                </items>
            </hideFooter>
        </items>
    </items>
</jcr:root>
