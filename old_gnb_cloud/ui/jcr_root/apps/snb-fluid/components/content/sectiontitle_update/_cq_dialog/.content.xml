<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Section Title"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Title"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <style
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Style"
                                name="./style"
                                type="select"
                                validateOnBlur="true"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <alerts
                                        jcr:primaryType="nt:unstructured"
                                        text="Alerts"
                                        value="alerts"/>
                                    <links
                                        jcr:primaryType="nt:unstructured"
                                        text="Emphasis"
                                        value="links"/>
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="Normal"
                                        value="normal"/>
                                    <pageHeader
                                        jcr:primaryType="nt:unstructured"
                                        text="Page Header Style"
                                        value="pageheader"/>
                                    <standard
                                        jcr:primaryType="nt:unstructured"
                                        text="Standard Header"
                                        value="standard"/>
                                    <unstyled
                                        jcr:primaryType="nt:unstructured"
                                        text="No Style"
                                        value="unstyled"/>
                                </options>
                            </style>
                            <titletextf
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Title"
                                name="./sectionTitle"
                                validateOnBlur="true"
                                xtype="textfield"/>
                            <titlelinkf
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Title Link"
                                name="./titleLink"
                                validateOnBlur="true"
                                xtype="pathfield"/>
                            <morelinktext
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="More Link Text"
                                name="./moreLinkText"
                                validateOnBlur="true"
                                xtype="textfield"/>
                            <morelink
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="More Link"
                                name="./moreLink"
                                validateOnBlur="true"
                                xtype="pathfield"/>
                            <rssfeed
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="RSS Enabled"
                                name="./rssfeed"
                                validateOnBlur="true"
                                xtype="pathfield"/>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
