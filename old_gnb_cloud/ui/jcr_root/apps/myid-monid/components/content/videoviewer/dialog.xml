<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Video Viewer"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <VideoViewer
                jcr:primaryType="cq:Panel"
                title="Video Viewer">
                <items jcr:primaryType="cq:WidgetCollection">
                    <youtubeId
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="YouTube Id"
                        name="./youtubeId"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <videoPath
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="mp4, ogg, or webm"
                        fieldLabel="Video Path"
                        name="./videoPath"
                        validateOnBlur="true"
                        xtype="pathfield"/>
                    <videoTitle
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Video Title"
                        name="./videoTitle"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <videoDuration
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Video Duration"
                        name="./videoDuration"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <videoDescription
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Video Description"
                        name="./videoDescription"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <thumbnailPath
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="proper size-  597(w), 337(h)"
                        fieldLabel="Thumbnail"
                        name="./thumbnailPath"
                        validateOnBlur="true"
                        xtype="pathfield"/>
                    <height
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Height"
                        name="./height"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <width
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Width"
                        name="./width"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <watchVideoText
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Watch Video Text"
                        name="./watchVideoText"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <embed
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Embed video in page"
                        inputValue="true"
                        name="./embed"
                        type="checkbox"
                        xtype="selection"/>
                    <hideYoutubeTitle
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Hide Youtube Title on Video when embeded"
                        fieldLabel="Hide Youtube Title"
                        inputValue="false"
                        name="./hideYoutubeTitle"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </VideoViewer>
        </items>
    </items>
</jcr:root>
