<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Breadcrumb"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <setting
                jcr:primaryType="cq:Panel"
                title="Setting">
                <items jcr:primaryType="cq:WidgetCollection">
                    <absParent
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="(eg: 1 for /content/site)"
                        fieldLabel="Parent Level (absolute)"
                        name="./absParent"
                        xtype="textfield"/>
                    <relParent
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="(eg: 0 for current page)"
                        fieldLabel="Relative stop level"
                        name="./relParent"
                        xtype="textfield"/>
                    <delim
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Delimiter"
                        name="./delim"
                        xtype="textfield"/>
                    <trail
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Trailing Delimiter"
                        name="./trail"
                        xtype="textfield"/>
                </items>
            </setting>
            <color
                jcr:primaryType="cq:Panel"
                title="Color">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Type"
                        name="./type"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <wrapper-forest
                                jcr:primaryType="nt:unstructured"
                                text="wrapper-forest"
                                value="wrapper-forest"/>
                            <wrapper-ocean
                                jcr:primaryType="nt:unstructured"
                                text="wrapper-ocean"
                                value="wrapper-ocean"/>
                            <wrapper-gold
                                jcr:primaryType="nt:unstructured"
                                text="wrapper-gold"
                                value="wrapper-gold"/>
                            <wrapper-crimson
                                jcr:primaryType="nt:unstructured"
                                text="wrapper-crimson"
                                value="wrapper-crimson"/>
                            <wrapper-black
                                jcr:primaryType="nt:unstructured"
                                text="wrapper-black"
                                value="wrapper-black"/>
                        </options>
                    </type>
                </items>
            </color>
        </items>
    </items>
</jcr:root>
