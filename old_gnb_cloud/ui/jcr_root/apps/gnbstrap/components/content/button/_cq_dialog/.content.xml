<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <setting
                jcr:primaryType="nt:unstructured"
                jcr:title="Setting"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Button text"
                                name="./text"
                                xtype="textfield"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Button link"
                                name="./link"
                                xtype="pathfield"/>
                        </items>
                    </column>
                </items>
            </setting>
            <size
                jcr:primaryType="nt:unstructured"
                jcr:title="Size"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Type"
                                name="./size">
                                <items jcr:primaryType="nt:unstructured">
                                    <btn-lg
                                        jcr:primaryType="nt:unstructured"
                                        text="Large"
                                        value="btn-lg"/>
                                    <btn-md
                                        jcr:primaryType="nt:unstructured"
                                        text="Medium"
                                        value="btn-md"/>
                                    <btn-sm
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="btn-sm"/>
                                </items>
                            </size>
                        </items>
                    </column>
                </items>
            </size>
            <color
                jcr:primaryType="nt:unstructured"
                jcr:title="Color"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Type"
                                name="./color">
                                <items jcr:primaryType="nt:unstructured">
                                    <btn-primary
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-primary"
                                        value="btn-primary"/>
                                    <btn-secondary
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-secondary"
                                        value="btn-secondary"/>
                                    <btn-success
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-success"
                                        value="btn-success"/>
                                    <btn-danger
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-danger"
                                        value="btn-danger"/>
                                    <btn-warning
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-warning"
                                        value="btn-warning"/>
                                    <btn-info
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-info"
                                        value="btn-info"/>
                                    <btn-light
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-light"
                                        value="btn-light"/>
                                    <btn-dark
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-dark"
                                        value="btn-dark"/>
                                    <btn-link
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-link"
                                        value="btn-link"/>
                                    <btn-outline-primary
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-primary"
                                        value="btn-outline-primary"/>
                                    <btn-outline-secondary
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-secondary"
                                        value="btn-outline-secondary"/>
                                    <btn-outline-success
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-success"
                                        value="btn-outline-success"/>
                                    <btn-outline-danger
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-danger"
                                        value="btn-outline-danger"/>
                                    <btn-outline-warning
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-warning"
                                        value="btn-outline-warning"/>
                                    <btn-outline-info
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-info"
                                        value="btn-outline-info"/>
                                    <btn-outline-light
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-light"
                                        value="btn-outline-light"/>
                                    <btn-outline-dark
                                        jcr:primaryType="nt:unstructured"
                                        text="btn-outline-dark"
                                        value="btn-outline-dark"/>
                                </items>
                            </color>
                        </items>
                    </column>
                </items>
            </color>
        </items>
    </content>
</jcr:root>
