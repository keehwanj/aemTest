<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#List"
    manageTabs="function(tab,noSwitch){var tabs=['props','children','static','search','querybuilder'];var index=tabs.indexOf(tab);if(index==-1) return;for(var i=1;i!=tabs.length-1;i++){if(index==i){this.unhideTabStripItem(i);}else{this.hideTabStripItem(i);}}this.doLayout();if(!noSwitch)this.activate(index);}"
    title="Tab Panel"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <static
            jcr:primaryType="cq:Widget"
            title="Fixed list"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <predefined
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The pre-defined tab list"
                    fieldLabel="predefined"
                    name="./predefined"
                    options="$PATH.displayoptions.json"
                    type="select"
                    xtype="selection"/>
                <tabs
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Click the '+' to add a new tab"
                    fieldLabel="tabtitles"
                    name="./tabs"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        width="155"
                        xtype="textfield"/>
                </tabs>
                <tabColor
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}true"
                    fieldLabel="tabcolor"
                    name="./tabColor"
                    options="$PATH.coloroptions.json"
                    type="select"
                    xtype="selection"/>
            </items>
        </static>
    </items>
</jcr:root>
