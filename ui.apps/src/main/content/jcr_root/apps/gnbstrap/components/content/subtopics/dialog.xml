<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Card - topic"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <setting
                jcr:primaryType="cq:Panel"
                title="Setting">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <content
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Content"
                        height="150"
                        name="./content"
                        xtype="textarea"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Link"
                        name="./link"
                        xtype="pathfield"/>
                </items>
            </setting>
            <type
                jcr:primaryType="cq:Panel"
                title="Type">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Type"
                        name="./type"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <external-link
                                jcr:primaryType="nt:unstructured"
                                text="external-link"
                                value="external-link"/>
                            <no_x0020_external
                                jcr:primaryType="nt:unstructured"
                                text="no external"
                                value=""/>
                        </options>
                    </type>
                </items>
            </type>
        </items>
    </items>
</jcr:root>
