                            features="*"/>
                        <table
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <undo
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <findreplace
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                    </rtePlugins>
                    <htmlRules jcr:primaryType="nt:unstructured">
                        <links
                            jcr:primaryType="nt:unstructured"
                            protocols="[http://,https://]"/>
                        <htmlRules jcr:primaryType="nt:unstructured">
                            <links
                                jcr:primaryType="nt:unstructured"
                                protocols="[http://,https://]"/>
                        </htmlRules>
                    </htmlRules>
                </fr_description>
                <en_body
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Body - English"
                    height="250"
                    name="./en_body"
                    xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
