                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                    </rtePlugins>
                    <htmlRules jcr:primaryType="nt:unstructured">
                        <links
                            jcr:primaryType="nt:unstructured"
                            protocols="[http://,https://]"/>
                    </htmlRules>
                </fr_body>
            </items>
        </emergency>
